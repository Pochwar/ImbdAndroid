<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>

        <item name="android:textColor">@android:color/white</item>
        <item name="android:editTextColor">@android:color/white</item>
        <item name="android:textColorHint">@android:color/white</item>
        <item name="android:windowBackground">@color/colorPrimary</item>


        <item name="actionBarTheme">@style/ThemeOverlay.AppTheme.ActionBar</item>
    </style>

    <style name="ThemeOverlay.AppTheme.ActionBar"
        parent="ThemeOverlay.AppCompat.Dark.ActionBar">
        <!-- title text color -->
        <item name="android:textColorPrimary">@color/yellow</item>
        <!-- subtitle text color -->
        <item name="android:textColorSecondary">@color/yellow</item>
        <!-- action menu item text color -->
        <item name="actionMenuTextColor">@color/yellow</item>
        <!-- action menu item icon color -->
        <item name="colorControlNormal">@color/yellow</item>
    </style>

    <style name="IMDBButton" parent="@android:style/Widget.Button">
        <item name="android:background">@color/darkGrey</item>
        <item name="android:textColor">@color/yellow</item>
    </style>

    <style name="IMDBSearch" parent="@android:style/Widget.EditText">
        <item name="android:background">@color/white</item>
        <item name="android:textColor">@color/black</item>
    </style>

    <style name="IMDBList" parent="@android:style/Widget.ListView">
        <item name="android:background">@color/darkGrey</item>
    </style>

    <style name="IMDBListItem" parent="@android:style/Widget.ListView">
        <item name="android:textColor">@color/yellow</item>
    </style>

    <style name="IMDBDetailCheckbox" parent="Base.Widget.AppCompat.CompoundButton.CheckBox">
        <item name="android:textColor">@color/yellow</item>
    </style>

</resources>
